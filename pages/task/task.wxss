/* pages/task/task.wxss */
.zq_task{
  margin-top:126rpx;
  background-color: #f7f7f7;
  height:100%
}
.zq_location{
  height:100rpx;
  padding:0 30rpx;
  background-color: #FFF;
  display: flex;
  align-items: center
}
.zq_location .position{
  flex: 1;
  font-size: 36rpx;
}
.zq_location .position image{
  width:24rpx;
  height:14rpx;
}
.zq_location .location{
  flex: 1;
  text-align: right;
  font-size: 28rpx;
}
.zq_location .location image{
  width:20rpx;
  height:26rpx;
}
.listUl{
  padding:0 30rpx;
  margin-top:14rpx;
  background-color: #fff
}
.listLi,.listLi2{
  display: flex;
  width:100%;
  padding:30rpx 0 ;
  border-bottom:1px solid #e9e9e9;
}
.listLi2:last-child{
  border:none;
}
.listLi view{
  width:434rpx;
}
.listLi2  view{
  width:100%;
}
.listLi text,.listLi2 text{
  display: block;
}
.listLi .liTitle,.listLi2 .liTitle{
 color:#222222;
 font-size:32rpx;
}
.listLi .liTime,.listLi2 .liTime{
  color:#c8c8c8;
 font-size:24rpx;
}
.listLi .liMoney,.listLi2 .liMoney{
  color:#EB5E47;
  font-size:34rpx;
  margin:10rpx 0;
}
.listLi image{
  width:220rpx;
  height:160rpx;
  border-radius: 26rpx;
  margin-left:20rpx;
}
.isBottom{
width:100%;
text-align:center;
height:116rpx;
color:#BEBDBD;
font-size:28rpx;
position: relative;
display: flex;
justify-content: center;
align-items: center
}
.isBottom text:before,.isBottom text:after{
    content: ''; 
    position: absolute; 
    top:50%; 
    background:#BEBDBD;  
    width:8rpx;           
    height:8rpx; 
    border-radius: 50%;
}

.isBottom text:before{
  left:288rpx;
}
.isBottom text:after{
  right:288rpx;
}
.typeList{
  background-color: rgba(0,0,0,0.4);
  height:100%;
  position:fixed;
  top:128rpx;
  width:100%;
}
.typeListH{
  top:178rpx;
}

.typeList .list{
  background-color:#fff;
  height:326rpx;
  font-size:26rpx;
  display: grid;
  grid-template-columns:repeat(4, 1fr);
  grid-template-rows:repeat(3, 1fr);
}
.typeList .list view{
display: flex;
  align-items: center;
  justify-content: center
}
.typeList .list view view{
  background-color: #f5f5f5;
  color:#666;
  font-size: 30rpx;
  width:150rpx;           
  height:68rpx; 
  border-radius: 34rpx;
}
.red{
  background-color:#EB5E47 !important;
  color: #fff !important
}