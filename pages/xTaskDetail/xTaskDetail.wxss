/* pages/taskDetail/taskDetail.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: #fff;
}
.zq_taskDetail{
  background-color: #fff;
  margin-top:126rpx;
  margin-bottom:98rpx;

}
.footerContent{
display: flex;
position: fixed;
bottom: 0;
left:0;
height:98rpx;
width:100%;
font-size:34rpx;
vertical-align: middle;
border-top:#E0E0E0 1px solid 
}
.footerContent .footerContentL{
  flex:1;
  padding:0 30rpx;
  color: #222;
  display: flex;
  align-items: center;
  justify-content: center
}
.footerContent .footerContentR{
  flex:1;
  padding:0 30rpx;
  background-color: #EB5E47;
  color:#fff;
  display: flex;
  align-items: center;
  justify-content: center
}

.zq_article{
  display: flex;
  font-size: 26rpx;
  padding:30rpx;
}
.zq_article image{
  width:28rpx;
  height:28rpx;
  margin-right:14rpx;
}
.zq_article .type{
flex:1;
color: #EB5E47;
display: flex;
align-items: center
}
.zq_article .time{
flex:1;
color: #999999;
display: flex;
align-items: center;
justify-content: flex-end
}
.article{
padding:0 30rpx 30rpx 30rpx;
color:#222;
line-height:42rpx; 
}
.article view{
  text-indent:2em;
  font-size:28rpx;
}
.article .title{
margin-bottom:30rpx;
font-size:32rpx;
text-indent:0;
font-weight:bold;
}
.article .articleImage{
text-indent:0;
position: relative;
margin:30rpx 0;
width:100%;
  height:300rpx;
}
.articleImage image{
  width:100%;
  height:300rpx;
  border-radius: 26rpx;
}
.article .articleImage .imgNum{
  position: absolute;
  bottom:10rpx;
  right:10rpx;
  width:78rpx;
  height:40rpx;
  border-radius: 20rpx;
  color:#fff;
  font-size:24rpx;
  background-color: rgba(0,0,0,0.3);
  text-indent:0;
  text-align: center
}
.article .city,.article .name{
 text-indent:0;
 font-size:30rpx;
}
.article .share{
 text-indent:0;
 display: flex;
 justify-content: flex-end;
 align-items:center ;
 font-size:24rpx;
}
.article .share view{
  text-indent:0;
 display: flex;
 justify-content:center;
 align-items:center ;
 width:240rpx;
 height:60rpx;
 border:1px solid #e5e5e5;
 border-radius: 26rpx;
}
.article .share image{
 width:56rpx;
 height:46rpx;
 margin-right:14rpx;
}

