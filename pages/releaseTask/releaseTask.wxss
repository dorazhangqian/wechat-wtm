/* pages/releaseTask/releaseTask.wxss */
.zq_release{
margin-top:128rpx;
margin-bottom: 118rpx;
}
.zq_release .notice{
  width:100%;
  height:70rpx;
  line-height:70rpx;
  font-size: 28rpx;
  color:#EB5E47;
  background-color: #FCF9E5;
  text-align: center;
  border-top:1px solid #FCB678;
  border-bottom:1px solid #FCB678;
}
.footerContent{
display: flex;
position: fixed;
bottom: 0;
left:0;
height:98rpx;
width:100%;
vertical-align: middle;
border-top:#E0E0E0 1px solid;
z-index:100; 
}
.zq_release .content{
padding-left:30rpx;
background-color: #fff;
margin-top:18rpx;
}
.content .infoType{
  height:110rpx;
  line-height:110rpx;
  display: flex;
  padding-right:30rpx;
  font-size:30rpx;
  border-bottom:1px solid #f7f7f7
}
.infoType .infoTypeL{
  flex:2;
  color:#666;
  overflow: hidden
}
.infoType .infoTypeR{
  flex:3;
  text-align: right;
  color:#222;
  display: flex;
  justify-content: flex-end;
  align-items: center
}
.infoType .infoTypeR2{
  flex:6;
  color:#222;
  display: flex;
  align-items: center
}
.infoType .infoTypeR3{
 flex:4;
 color:#222;
 display: flex;
  align-items: center
}
.infoType .infoTypeR4{
 flex:2;
 color:#222;
 display: flex;
 justify-content: center;
 align-items: center
}
.infoType .infoTypeR4 .left{
  width:144rpx;
  height:62rpx;
  border:1px solid #d7d7d7;
  border-radius: 8rpx;
  font-size:32rpx;
  display: flex;
  align-items: center;
  background-color: #d7d7d7
}
.infoType .infoTypeR4  .left view{
  width:98rpx;
  height:62rpx;
  border-radius: 8rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center
}
.infoType .infoTypeR image{
  width:16rpx;
  height:28rpx;
  margin-left:20rpx
}
.infoType input{
  width:100%;
}

.footerContent .footerContentR{
  flex:1;
  padding:0 30rpx;
  background-color: #EB5E47;
  color:#fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:34rpx;
  font-weight:bold;
}
.picker{
  width:290rpx;
  text-align:right;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
  vertical-align: middle;
}
.infoContent{
  padding:30rpx 30rpx 30rpx 0;
  border-bottom:1px solid #f7f7f7;
}
.infoContent textarea{
  height:300rpx;
  width:100%;
}
.infoImg{
border-bottom:1px solid #f7f7f7;
padding:30rpx 30rpx 30rpx 0;
}
.infoImg title{
color:#666;
font-size:30rpx;
}
.infoImg .imgList{
  padding-left:28rpx;
}
.infoImg .imgList view{
  position: relative;
  display: inline-block;
  border-radius: 10rpx;
  margin:40rpx 0 0 40rpx;
}
.infoImg .imgList .img1{
  width:160rpx;
  height:160rpx;
}
.infoImg .imgList .img2{
  width:28rpx;
  height:28rpx;
  position:absolute;
  right:-8rpx;
  top:-8rpx;
}