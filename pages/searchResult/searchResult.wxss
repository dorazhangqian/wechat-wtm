.zq_searchResult{
  margin-top:126rpx;
  background-color: #fff;
  padding:20rpx 30rpx;
}
.zq_input{
  display: flex;
  align-items: center; 
  width:100%rpx;
  height:64rpx;
  margin:auto;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  font-size: 30rpx;
  color:#222;
  padding:0 30rpx;
}
.zq_input image{
  height:30rpx;
  width:30rpx;
  margin-left:14rpx;
}
.zq_input input{
  width:640rpx;
}
.listLi,.listLi2{
  display: flex;
  width:100%;
  padding:30rpx 0 ;
  border-bottom:1px solid #e9e9e9;
}
.listLi2:last-child{
  border:none;
}
.listLi view{
  width:434rpx;
}
.listLi2  view{
  width:100%;
}
.listLi text,.listLi2 text{
  display: block;
}
.listLi .liTitle,.listLi2 .liTitle{
 color:#222222;
 font-size:32rpx;
}
.listLi .liTime,.listLi2 .liTime{
  color:#c8c8c8;
 font-size:24rpx;
}
.listLi .liMoney,.listLi2 .liMoney{
  color:#EB5E47;
  font-size:34rpx;
  margin:10rpx 0;
}
.listLi image{
  width:220rpx;
  height:160rpx;
  border-radius: 26rpx;
  margin-left:20rpx;
}