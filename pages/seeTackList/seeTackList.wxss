/* pages/seeTackList/seeTackList.wxss */
.zq_task{
  margin-top:126rpx;
  background-color: #f7f7f7;
  height:100%
}
.zq_location{
  height:100rpx;
  padding:0 30rpx;
  background-color: #FFF;
  display: flex;
  align-items: center
}
.zq_location .position{
  flex: 1;
  font-size: 36rpx;
}
.zq_location .position image{
  width:24rpx;
  height:14rpx;
}
.zq_location .location{
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color:#EB5E47;
}
.zq_location .location image{
  width:20rpx;
  height:26rpx;
}
.listUl{
  padding:0 30rpx;
  margin-top:14rpx;
  background-color: #fff
}
.listLi,.listLi2{
  display: flex;
  width:100%;
  padding:30rpx 0 ;
  border-bottom:1px solid #e9e9e9;
}
/* .listLi:last-child{
  border:none;
} */
.listLi view{
  width:434rpx;
}
.listLi2  view{
  width:100%;
}
.listLi text,.listLi2 text{
  display: block;
}
.listLi .liTitle,.listLi2 .liTitle{
 color:#222222;
 font-size:32rpx;
}
.listLi .liTime,.listLi2 .liTime{
  color:#c8c8c8;
  font-size:24rpx;
  
}
.listLi .liMoney,.listLi2 .liMoney{
  color:#EB5E47;
  font-size:34rpx;
  margin:10rpx 0;
}
.listLi image{
  width:220rpx;
  height:160rpx;
  border-radius: 26rpx;
  margin-left:20rpx;
}
.isBottom{
width:100%;
text-align:center;
height:116rpx;
color:#BEBDBD;
font-size:28rpx;
position: relative;
display: flex;
justify-content: center;
align-items: center
}
.isBottom text:before,.isBottom text:after{
    content: ''; 
    position: absolute; 
    top:50%; 
    background:#BEBDBD;  
    width:8rpx;           
    height:8rpx; 
    border-radius: 50%;
}

.isBottom text:before{
  left:288rpx;
}
.isBottom text:after{
  right:288rpx;
}
.myli{
  display: flex;
  align-items: center
}
.myli:last-child .listLi{
  border:none;
}
checkbox{
  margin-right:30rpx;
}
.footerContent{
display: flex;
position: fixed;
bottom: 0;
left:0;
height:98rpx;
width:100%;

vertical-align: middle;
border-top:#E0E0E0 1px solid; 
}
.footerContent .footerContentL{
  flex:3;
  padding:0 30rpx;
  color: #222222;
  display: flex;
  align-items: center;
  font-size:32rpx;
}
.footerContent .footerContentR{
  flex:1;
  padding:0 30rpx;
  background-color: #EB5E47;
  color:#fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:34rpx;
}
.wx-checkbox-input{
width:36rpx !important;
height:36rpx !important;
margin:0 !important;
padding: 0 !important;
border-radius: 50% !important;

}
/* checkbox选中时样式 */
.wx-checkbox-input.wx-checkbox-input-checked::before{
  background-color: #EB5E47 !important;
  border-radius: 50% !important;
  width:52rpx !important;
  height:52rpx !important;
  display: flex;
  align-items: center;
  justify-content: center;
  border:none !important;
}